CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ): %.o: %.c
	$(CC) -c $(CFLAGS) $< -o $@

clean:
	$(RM) *~ *.swp $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: oclean clean
	@true

re:oclean all
	@true

.PHONY: all clean oclean fclean re
