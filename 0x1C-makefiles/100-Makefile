CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic


all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *.swp *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	@true

re: fclean all

.PHONY: all clean fclean oclean re



