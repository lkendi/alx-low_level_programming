CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ):
	$(CC) $(CFLAGS) -c $(SRC)

clean:
	$(RM) *~ *.swp $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: oclean clean
	@true

re:fclean all
	@true

.PHONY: all clean oclean fclean re

main.o: main.c m.h
school.o: school.c m.h
